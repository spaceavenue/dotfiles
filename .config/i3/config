set $mod Mod4
set $browser1 firefox
set $browser2 firefox -P sanyaxo
set $discord discord
set $discord2 /home/sanyaxo/.local/bin/vencorddesktop
set $term alacritty
set $spot flatpak run com.spotify.Client
set $thunar thunar

font pango:Iosevka ss06 Extralight 12

# start polybar
exec --no-startup-id polybar -q main

#start dunst
exec --no-startup-id dunst


# autotiling script
exec --no-startup-id $HOME/.local/bin/autotiling

# wallpaper
exec --no-startup-id feh --bg-scale --no-fehbg $HOME/media/wallpaper/ultrakill_wallpaper.png

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

#media controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# change focus
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# split in horizontal/vertical orientation
bindsym $mod+h split h
bindsym $mod+v split v

# enter fullscreen
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# lock screen 
bindsym $mod+Shift+l exec lock-screen

# exit i3
bindsym $mod+Shift+e exit

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# height and width control
bindsym $mod+greater       resize grow   width  5 px or 5 ppt
bindsym $mod+less          resize shrink width  5 px or 5 ppt
bindsym $mod+Shift+greater resize grow   height 5 px or 5 ppt
bindsym $mod+Shift+less    resize shrink height 5 px or 5 ppt

# add/subtract to current
bindsym $mod+plus       gaps inner current plus 10
bindsym $mod+minus      gaps inner current minus 5

# no window border
for_window [class=".*"] border pixel 0

# open terminal
bindsym $mod+t exec $term

# open rofi
bindsym $mod+r exec rofi -show drun

# open browser
bindsym $mod+b exec $browser1
bindsym $mod+Shift+b exec $browser2

# open discord
bindsym $mod+d exec $discord
bindsym $mod+Shift+d exec $discord2

# open spotify
bindsym $mod+s exec $spot

# open nautilus
bindsym $mod+n exec $thunar

#open codium
bindsym $mod+c exec codium

# screenshot
bindsym --release Control+Shift+s exec flameshot && flameshot gui

# shift to second display
bindsym $mod+Shift+p move workspace to output right

# workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 0

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 0
