#!/bin/sh

PRIMARY='#ff7abaff'
BLANK='#000000ff'
TEXT='#a6adc8ff'
WRONG='#ff0000ff'
VERIFYING='#ffd1dbff'

i3lock \
	--color=$BLANK \
    \
    --insidever-color=$BLANK \
    --insidewrong-color=$BLANK \
	--ringver-color=$VERIFYING \
	--ringwrong-color=$WRONG \
	\
	--inside-color=$BLANK \
    --line-color=$BLANK \
    --separator-color=$BLANK \
	--ring-color=$PRIMARY \
	\
    --verif-color=$TEXT \
    --wrong-color=$TEXT \
    --time-color=$TEXT \
    --date-color=$TEXT \
    --layout-color=$TEXT \
    \
	--keyhl-color=$VERIFYING \
    bshl-color=$VERIFYING \
	\
    --verif-text="verifyingâ€¦" \
    --wrong-text="wrong!" \
	--radius 180 \
	--ring-width 12 \
	--screen 1 \
	--clock \
	--indicator \
	--time-str="%H:%M:%S" \
	--date-str="%a, %d %b %y"
